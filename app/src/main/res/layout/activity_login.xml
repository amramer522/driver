<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="login"
        android:gravity="center"
        android:textSize="@dimen/d90"
        android:fontFamily="@font/paul"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/d40"
        android:layout_alignBottom="@id/login_activity_iv_logo"
        android:layout_alignParentStart="true"
        />


    <ImageView
        android:id="@+id/login_activity_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d150"
        android:layout_marginTop="@dimen/d80"
         />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_activity_til_student_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_activity_til_password"
        android:textColorHint="@color/white">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/white"
            android:hint="رقم السواق" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_activity_til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_activity_btn_sign_in"
        android:layout_marginTop="@dimen/d16"
        android:textColorHint="@color/white"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:gravity="center"
            android:textColor="@color/white"
            android:hint="الرقم السرى" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_activity_btn_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_activity_btn_sign_up"
        android:layout_marginStart="@dimen/d90"
        android:layout_marginTop="@dimen/d16"
        android:layout_marginEnd="@dimen/d90"
        android:background="@drawable/shape_sign_in_btn"
        android:text="تسجيل الدخول"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/login_activity_btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/d16"
        android:layout_marginBottom="@dimen/d50"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>